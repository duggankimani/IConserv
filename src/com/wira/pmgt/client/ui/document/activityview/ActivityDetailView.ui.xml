<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:programs='urn:import:com.wira.pmgt.client.ui.programs' xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d='urn:import:com.wira.pmgt.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="full-page activities-page">
		<g:HTMLPanel styleName="row-fluid content-top" ui:field="divContentTop">
			<programs:ProgramHeader ui:field="headerContainer"
				leftMargin="false"></programs:ProgramHeader>
		</g:HTMLPanel>

		<g:HTMLPanel styleName="row-fluid" ui:field="panelCrumbs">
		</g:HTMLPanel>

		<div class="row-fluid activities-content">
			<g:HTMLPanel styleName="span6">
				<div class="row-fluid item">
					<strong>Description:</strong>
					<span ui:field="spnDescription" class="subject"></span>
				</div>

				<div class="row-fluid item">
					<strong>Assigned To:</strong>
					<span ui:field="spnAssigned" class="subject"></span>
				</div>

				<div class="row-fluid item" ui:field="divValue">
					<strong>Budget:</strong>
					<span ui:field="spnBudget" class="subject"></span>
				</div>
				<div class="row-fluid item" ui:field="divPartner">
					<strong>Targets and Outcomes:</strong>
					<span ui:field="spnTargets" class="subject"></span>
				</div>
			</g:HTMLPanel>
			
			<g:HTMLPanel styleName="span6">
				<div class="row-fluid item" ui:field="divProgress">
					<strong>Progress:</strong>
					<span ui:field="spnProgress"></span>
				</div>

				<div class="row-fluid item" ui:field="divRatings">
					<strong>Ratings:</strong>
					<span ui:field="spnRatings"></span>
				</div>
			</g:HTMLPanel>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>
