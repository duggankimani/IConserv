<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:d='urn:import:com.wira.pmgt.client.ui.component' xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:a='urn:import:com.wira.pmgt.client.ui.component.autocomplete'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	<g:HTMLPanel>
		<!-- BreadCrump -->
		<d:BulletListPanel styleName="breadcrumb" ui:field="crumbContainer">
		</d:BulletListPanel>

		<d:IssuesPanel ui:field="issues">
		</d:IssuesPanel>

		<div class="row-fluid">
			<div class="row-fluid users-container">
				<h5 class="heading">Allocated Users</h5>
				<div>
					<div class="row-fluid name-box">
						<div class="span2">
							<img class="img-rounded" src="img/me.jpg" alt="" width="50px"
								height="50px" />
						</div>
						<div class="span7">
							<span class="names">Tom Kimani</span>
							<span class="email muted">tomkim@laikipia.org</span>
						</div>

						<div class="span2">
							<div class="btn-group">
								<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
									Assignee
									<span class="caret"></span>
								</a>
								<ul class="dropdown-menu">
									<!-- dropdown menu links -->
									<li>
										<a>StakeHolder</a>
									</li>
								</ul>
							</div>
						</div>
					</div>

					<div class="row-fluid name-box">
						<div class="span2">
							<img class="img-rounded" src="img/me.jpg" alt="" width="50px"
								height="50px" />
						</div>
						<div class="span7">
							<span class="names">Tom Kimani</span>
							<span class="email muted">tomkim@laikipia.org</span>
						</div>

						<div class="span2">
							<div class="btn-group">
								<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
									Assignee
									<span class="caret"></span>
								</a>
								<ul class="dropdown-menu">
									<!-- dropdown menu links -->
									<li>
										<a>StakeHolder</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="row-fluid well actions-box">
				<div class="control-label" title="Allocate to users">Allocate People:</div>
				<div class="controls" title="Allocate to users">
					<div class="row-fluid">
						<div class="span8">
							<a:AutoCompleteField ui:field="allocatedToUsers" />
						</div>
						<div class="pull-right">
							<div class="btn-group">
								<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
									Assignee
									<span class="caret"></span>
								</a>
								<ul class="dropdown-menu">
									<!-- dropdown menu links -->
									<li>
										<a>StakeHolder</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
					<div class="row-fluid">
						<g:CheckBox styleName="ace"></g:CheckBox>
						<span>Notify People via Email - </span>
						<g:Anchor ui:field="aMessage">Add Message</g:Anchor>
					</div>
					
					<div class="row-fluid hidden">
						<g:TextArea></g:TextArea>
					</div>
					
					<div class="row-fluid action-buttons">
						<div class="span3">
							<g:Anchor ui:field="aSend" styleName="btn btn-success">Send</g:Anchor>
						</div>
						
						<div class="span3">
							<g:Anchor ui:field="aCancel" styleName="btn btn-default">Cancel</g:Anchor>
						</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
