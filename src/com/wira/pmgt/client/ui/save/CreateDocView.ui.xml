<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:dt='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:d='urn:import:com.wira.pmgt.client.ui.component' xmlns:v='urn:import:com.wira.pmgt.client.ui.component'
	xmlns:up='urn:import:com.wira.pmgt.client.ui.upload.custom' xmlns:c='urn:import:com.wira.pmgt.client.ui.admin.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:DialogBox text="Create Program" styleName="modal modal-document"
		modal="true" glassEnabled="true" ui:field="popupView">
		<g:HTMLPanel>
			<v:IssuesPanel ui:field="issues">
			</v:IssuesPanel>

			<g:HTMLPanel ui:field="panelBody" styleName="modal-body">
				<fieldset>
					<g:HTMLPanel ui:field="panelFields" styleName="form-horizontal">

						<div class="control-group">
							<div class="control-label" ui:field="tdDocType">Name:</div>
							<div class="controls">
								<g:TextBox ui:field="txtSubject" />
							</div>
						</div>

						<div class="control-group">
							<div class="control-label">Date Range:</div>
							<div class="controls">
								<v:DateRangeWidget></v:DateRangeWidget>
							</div>
						</div>

						<div class="control-group">
							<div class="control-label">Donors:</div>
							<div class="controls">
								Grid Here
							</div>
						</div>

						<div class="control-group">
							<div class="control-label">Allocated To:</div>
							<div class="controls">
								<c:ListField ui:field="lstUsers" />
							</div>
						</div>

					</g:HTMLPanel>
				</fieldset>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="panelButtons" styleName="form-actions">
				<g:Button ui:field="btnSave" styleName="btn btn-primary pull-left">Save</g:Button>
				<g:Button ui:field="btnCancel" styleName="btn btn-default pull-right">Cancel</g:Button>
			</g:HTMLPanel>

		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>
