<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.wira.pmgt.client.ui.component' xmlns:up='urn:import:com.wira.pmgt.client.ui.upload.custom'
	xmlns:activities='urn:import:com.wira.pmgt.client.ui.activities'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="activities-page">
		<div class="full-page">

			<div class="content-top">
				<h4 ui:field="spnTitle"></h4>
				<span class="muted pull-right budget" ui:field="spnBudget"></span>
				<g:HTMLPanel ui:field="divNoContent" styleName="hidden">
					<i class="icon-warning-sign helper-font-16"></i>
					<span class="helper-font-16">
						No Programs Added. Click
						<a>Create Program</a>
						to get started
					</span>
				</g:HTMLPanel>
			</div>
			
			<div class="row-fluid full-page">
				<g:HTMLPanel ui:field="divContent" styleName="tabbable tabs-below hidden full-page no-overflow-x">
					<!--Action Buttons -->
					<div class="action-buttons row-fluid">
						<div class="span3 hide">
							<g:Anchor ui:field="aNewOutcome" styleName="btn btn-default"
								title="Add an outcome">
								<i class="icon-plus"></i>
								Add Outcome
							</g:Anchor>
						</div>
						<div class="span3 hide">
							<g:Anchor ui:field="aNewObjective" styleName="btn btn-default"
								title="Add an objective">
								<i class="icon-plus"></i>
								Add Objective
							</g:Anchor>
						</div>
						<div class="span3 hide">
							<g:Anchor ui:field="aNewActivity" styleName="btn btn-default"
								title="Add an activity">
								<i class="icon-plus"></i>
								Add Activity
							</g:Anchor>
						</div>
						<div class="span3 hide">
							<g:Anchor ui:field="aNewTask" styleName="btn btn-default"
								title="Add Task">
								<i class="icon-plus"></i>
								Add Task
							</g:Anchor>
						</div>
						<div class="span3 hide">
							<g:Anchor ui:field="aEdit" styleName="btn btn-default"
								title="Add Task">
								<i class="icon-plus"></i>
								Edit
							</g:Anchor>
						</div>
					</div>

					<div id="usercontent" class="tab-content">
						<div ui:field="divTab1Content" class="tab-pane fade in active">
							<activities:ActivitiesTable ui:field="tblView"></activities:ActivitiesTable>
						</div>
					</div>

					<d:BulletListPanel ui:field="listPanel"
						styleName="nav nav-tabs">
					</d:BulletListPanel>
				</g:HTMLPanel>
			</div>

		</div>
	</g:HTMLPanel>
</ui:UiBinder>
