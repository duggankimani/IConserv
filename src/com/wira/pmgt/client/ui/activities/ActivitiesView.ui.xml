<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.wira.pmgt.client.ui.component' xmlns:up='urn:import:com.wira.pmgt.client.ui.upload.custom'
	xmlns:activities='urn:import:com.wira.pmgt.client.ui.activities'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="activities-page">
		<div class="full-page">

			<div class="content-top">
				<!--Action Buttons -->
				<div class="action-buttons row-fluid">
					<!--Button Add Document -->
					<div class="span3">
						<g:Anchor ui:field="aProgram" styleName="btn btn-danger">Create Program</g:Anchor>
					</div>
					
					<div class="span3 hide">
						<g:Anchor ui:field="aBack" styleName="btn btn-default"
							title="Back">
							<i class="icon-arrow-left"></i>
						</g:Anchor>
					</div>

					<div class="span3 hide">
						<g:Anchor ui:field="aNewOutcome" styleName="btn btn-primary"
							title="Add an outcome">
							<i class="icon-plus"></i>
							Add Outcome
						</g:Anchor>
					</div>
					
					<div class="span3 hide">
						<g:Anchor ui:field="aNewObjective" styleName="btn btn-primary"
							title="Add an objective">
							<i class="icon-plus"></i>
							Add Objective
						</g:Anchor>
					</div>
					
					<div class="span3 hide">
						<g:Anchor ui:field="aNewActivity" styleName="btn btn-primary"
							title="Add an activity">
							<i class="icon-plus"></i>
							Add Activity
						</g:Anchor>
					</div>
					
					<div class="span3 hide">
						<g:Anchor ui:field="aNewTask" styleName="btn btn-primary"
							title="Add Task">
							<i class="icon-plus"></i>
							Add Task
						</g:Anchor>
					</div>
					
					<div class="span3 hide">
						<g:Anchor ui:field="aEdit" styleName="btn btn-default"
							title="Edit">
							<i class="icon-pencil"></i>
						</g:Anchor>
					</div>
					
					<div class="span3 hide">
						<g:Anchor ui:field="aDetail" styleName="btn btn-default"
							title="Detailed view" href="#home;page=detailed">
							<i class="icon-tasks"></i>
						</g:Anchor>
					</div>
	
					<div class="span3 hide">
						<g:Anchor ui:field="aDelete" styleName="btn btn-danger"
							title="Delete">
							<i class="icon-trash"></i>
						</g:Anchor>
					</div>
					
					<div class="span3 hide">
						<g:Anchor ui:field="aAssign" styleName="btn btn-default"
							title="Assign">
							<i class="icon-group"></i>
						</g:Anchor>
					</div>
					
				</div>
				<div class="row-fluid header">
					<div class="span10">
						<g:FocusPanel ui:field='panelTitle'>
							<g:HTMLPanel styleName="row-fluid">
								<g:HTMLPanel styleName="title-container span3">
									<h4 ui:field="spnTitle" class="title"></h4>
								</g:HTMLPanel>
								<g:HTMLPanel styleName="edit span1 btn-group"
									ui:field="divPopup">
									<g:InlineLabel ui:field="spnDates"
										styleName="text-info helper-font-small dropdown-toggle"></g:InlineLabel>

									<d:ActionLink styleName="icon-caret-down dropdown-toggle"
										title="Select Period" ui:field="aProgramEdit" dataToggle="dropdown"></d:ActionLink>

									<d:Dropdown ui:field="periodDropdown"></d:Dropdown>
								</g:HTMLPanel>

							</g:HTMLPanel>
						</g:FocusPanel>
					</div>
					<div class="span2">
						<span class="muted pull-right budget" ui:field="spnBudget"></span>
					</div>
				</div>

				<div class="row-fluid">
					<!-- BreadCrumb -->
					<d:BulletListPanel styleName="breadcrumb"
						ui:field="crumbContainer">
					</d:BulletListPanel>
				</div>
			</div>

			<div class="row-fluid full-page">
				<g:HTMLPanel ui:field="divNoContent" styleName="hidden">
					<i class="icon-warning-sign helper-font-16"></i>
					<span class="helper-font-16">
						No Programs Added. Click
						<a>Create Program</a>
						to get started
					</span>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="divContent"
					styleName="tabbable tabs-below hidden full-page no-overflow-x">
					<div id="usercontent" class="tab-content">
						<div ui:field="divTab1Content" class="tab-pane fade in active">
							<activities:ActivitiesTable ui:field="tblView"></activities:ActivitiesTable>
						</div>
					</div>

					<div class="row-fluid tab-body">
						<div class="span10 tabs-container">
							<d:BulletListPanel ui:field="listPanel"
								styleName="nav nav-tabs">
							</d:BulletListPanel>
						</div>
						<div class="span2 controllers">
							<g:Anchor ui:field="aLeft" styleName="span3">
								<span class="icon-caret-left helper-font-16"></span>
							</g:Anchor>
							<g:Anchor ui:field="aRight" styleName="span3">
								<span class="icon-caret-right helper-font-16"></span>
							</g:Anchor>
						</div>
					</div>
				</g:HTMLPanel>
			</div>

		</div>
	</g:HTMLPanel>
</ui:UiBinder>
