<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:c='urn:import:com.wira.pmgt.client.ui.admin.component' xmlns:d='urn:import:com.wira.pmgt.client.ui.component'
	xmlns:grid='urn:import:com.wira.pmgt.client.ui.component.grid' xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<!-- BreadCrump -->
		<d:BulletListPanel styleName="breadcrumb" ui:field="crumbContainer">
		</d:BulletListPanel>

		<d:IssuesPanel ui:field="issues">
		</d:IssuesPanel>

		<fieldset>
			<div class="control-group">
				<div class="controls">
					<g:InlineLabel ui:field="spnPeriod" styleName="muted">Jan 1 -
						Dec 31 2014</g:InlineLabel>
				</div>
			</div>
			<div class="control-group">
				<div class="control-label" ui:field="tdDocType">Activity:</div>
				<div class="controls">
					<g:TextArea ui:field="txtOutcome" width="90%" />
					<span class="mandatory" title="Required Field">*</span>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label">Date Range:</div>
				<div class="controls">
					<d:DateRangeWidget></d:DateRangeWidget>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label">Budget:</div>
				<div class="controls">
					<grid:AggregationGrid ui:field="budgetGrid"></grid:AggregationGrid>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label">Objectives:</div>
				<div class="controls">
					<c:ListField ui:field="lstUObjetives" />
				</div>
			</div>


			<div class="control-group">
				<div class="control-label">Allocated To:</div>
				<div class="controls">
					<c:ListField ui:field="lstUsers" />
				</div>
			</div>


			<div class="control-group">
				<div class="control-label">Status:</div>
				<div class="controls">
					<div class="btn-group">
						<button class="btn active">Opened</button>
						<button class="btn">In-Progress</button>
						<button class="btn">Closed</button>
					</div>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label" ui:field="tdDocType2">Target:</div>
				<div class="controls">
					<grid:AggregationGrid ui:field="targetGrid"></grid:AggregationGrid>
					<span class="mandatory" title="Required Field">*</span>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label" ui:field="tdDocType3">Indicators:</div>
				<div class="controls">
					<grid:AggregationGrid ui:field="indicatorGrid"></grid:AggregationGrid>
					<span class="mandatory" title="Required Field">*</span>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label" ui:field="tdDocType4">Output:</div>
				<div class="controls">
					<grid:AggregationGrid ui:field="outputGrid"></grid:AggregationGrid>
					<span class="mandatory" title="Required Field">*</span>
				</div>
			</div>

		</fieldset>
	</g:HTMLPanel>
</ui:UiBinder>
