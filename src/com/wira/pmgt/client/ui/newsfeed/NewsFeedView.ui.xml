<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.wira.pmgt.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>


	<g:HTMLPanel styleName="full-page">
		<g:FocusPanel ui:field="parentPanel">
			<g:HTMLPanel>
				<div class="bootcamp js-notice" ui:field="divTutorial">
					<h1>
						Welcome to Wira BPM
						<span>Here is a Walk-through to get you started</span>
						<g:Anchor ui:field="aClose">
							<span class="icon-remove-sign pull-right"></span>
						</g:Anchor>
					</h1>
					<div class="bootcamp-body">
						<ul>
							<li ui:field="liCreate">
								<g:Anchor ui:field="aCreate">
									<div class="image">
										<span class='icon-file'></span>
									</div>
									<div class="desc">
										<h2>Create Request</h2>
										<p>Add new documents and submit them for Approval.</p>
									</div>
									<span class="step-number one">1</span>
								</g:Anchor>
							</li>
							<li ui:field="liFollowUp">
								<g:Anchor ui:field="aFollowUp">
									<div class="image">
										<span class='icon-eye-open'></span>
									</div>
									<div class="desc">
										<h2>Follow-Up Requests</h2>
										<p>Get in-time reports on the status of your request</p>
									</div>
									<span class="step-number two">2</span>
								</g:Anchor>
							</li>
							<li ui:field="liReceive">
								<g:Anchor ui:field="aReceive">
									<div class="image" ui:field="imgReceive">
										<span class='icon-tasks'></span>
									</div>
									<div class="desc">
										<h2>Manage Tasks</h2>
										<p>Get Alerted on new request to your desk</p>
									</div>
									<span class="step-number three">3</span>
								</g:Anchor>
							</li>
							<li ui:field="liReview">
								<g:Anchor ui:field="aReview">
									<div class="image" ui:field="imgReview">
										<span class='icon-ok-circle'></span>
									</div>
									<div class="desc">
										<h2>Review Tasks</h2>
										<p>Evaluate information on a request, and make a decisive
											action</p>
									</div>
									<span class="step-number four">4</span>
								</g:Anchor>
							</li>
						</ul>
					</div> <!-- /bootcamp-body -->
				</div>
			</g:HTMLPanel>
		</g:FocusPanel>

		<div class="news-feed row-fluid">
			<div class="span6 news-box">
				<div class="portlet">
					<div class="portlet-header">
						<h3>
							<i class="icon-bar-chart"></i>
							News Feed
						</h3>
					</div>
					<g:HTMLPanel styleName="portlet-content">
						<d:BulletListPanel ui:field="panelActivity"
							styleName="chat-box timeline">
							<d:BulletPanel styleName="arrow-box-left gray">
								<g:HTMLPanel>
									<div class="avatar">
										<g:Image styleName="avatar-small" ui:field="img"
											url="img/blueman.png" />
									</div>
									<div class="info" id="activity">
										<span class="name">
											<!-- <span class="label label-blue" ui:field="spnTask">TASK</span> -->
											<strong class="indent">
												<span ui:field="spnUser">Michael Kamau</span>
											</strong>
											<span ui:field="spnAction">completed this task</span>
											<strong>
												<g:Anchor ui:field="aFile" styleName="item unread hand hide">
												</g:Anchor>
												<span ui:field="spnTo" class="hide">&nbsp;to&nbsp;</span>
												<g:Anchor ui:field="aDocument" styleName="item unread hand">
												</g:Anchor>
												<!-- span ui:field="spnSubject">Core Admin</span -->
											</strong>
										</span>
										<span class="time">
											<i class="icon-time"></i>
											<span ui:field="spnTime">6 minutes ago</span>
										</span>
									</div>
								</g:HTMLPanel>
							</d:BulletPanel>

							<d:BulletPanel styleName="arrow-box-left gray">
								<g:HTMLPanel>
									<div class="avatar">
										<g:Image styleName="avatar-small" ui:field="img2"
											url="img/blueman.png" />
									</div>
									<div class="info" id="activity">
										<span class="name">
											<!-- <span class="label label-blue" ui:field="spnTask2">TASK</span> -->
											<strong class="indent">
												<span ui:field="spnUser2">Michael Kamau</span>
											</strong>
											<span ui:field="spnAction2">completed this task</span>
											<strong>
												<g:Anchor ui:field="aFile2" styleName="item unread hand hide">
												</g:Anchor>
												<span ui:field="spnTo2" class="hide">&nbsp;to&nbsp;</span>
												<g:Anchor ui:field="aDocument2" styleName="item unread hand">
												</g:Anchor>
												<!-- span ui:field="spnSubject">Core Admin</span -->
											</strong>
										</span>
										<span class="time">
											<i class="icon-time"></i>
											<span ui:field="spnTime2">6 minutes ago</span>
										</span>
									</div>
								</g:HTMLPanel>
							</d:BulletPanel>


						</d:BulletListPanel>
					</g:HTMLPanel>
				</div>
			</div>

			<div class="span6">
				<div class="portlet activities-box">
					<div class="portlet-header">
						<h3>
							<i class="icon-bar-chart"></i>
							Upcoming Activities
						</h3>
					</div>
					<g:HTMLPanel styleName="portlet-content">
						Upcoming Activities come here..
					</g:HTMLPanel>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
