<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:up='urn:import:com.duggan.workflow.client.ui.upload.custom'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="upper-content">
		<div class="action-area row-fluid">
			<div class="doc-title span5">
				<span ui:field="spnDocType"></span>
				-&nbsp;
				<span ui:field="spnSubject"></span>
			</div>
			<div class="action-buttons pull-right">
				<d:ActionLink ui:field="aClaim" styleName="btn btn-default hidden"
					title="Reserve this task. Other users with the same role cannot work on this task if claimed">
					<i class="icon-arrow-down"></i>
					Claim
				</d:ActionLink>
				<d:ActionLink ui:field="aStart" styleName="btn btn-default hidden"
					title="Start working on the task">
					<i class="icon-play"></i>
					Start
				</d:ActionLink>

				<d:ActionLink ui:field="aResume" styleName="btn btn-default hidden">
					<i class="icon-play"></i>
					Resume
				</d:ActionLink>

				<d:ActionLink ui:field="aComplete" styleName="btn btn-default hidden">
					<i class="icon-ok"></i>
					Complete
				</d:ActionLink>

				<d:ActionLink ui:field="aSuspend" styleName="btn btn-default hidden"
					title="Suspend this task">
					<i class="icon-ok"></i>
					Suspend
				</d:ActionLink>

				<d:ActionLink ui:field="aDelegate" styleName="btn btn-default hidden"
					title="Delegate this task">
					<i class="icon-ok"></i>
					Delegate
				</d:ActionLink>

				<d:ActionLink ui:field="aRevoke" styleName="btn btn-default hidden"
					title="Revoke this task so that its re-assignable to other users in your group">
					<i class="icon-ok"></i>
					Revoke
				</d:ActionLink>

				<d:ActionLink ui:field="aStop" styleName="btn btn-default hidden">
					<i class="icon-ok"></i>
					Stop
				</d:ActionLink>

				<d:ActionLink ui:field="aForward" styleName="btn btn-success hidden">
					<i class="icon-share-alt"></i>
					Forward for Approval
				</d:ActionLink>

				<d:ActionLink ui:field="aApprove" styleName="btn btn-success"
					title="Approve document">
					<i class="icon-ok"></i>
					Approve
				</d:ActionLink>

				<d:ActionLink ui:field="aReject" styleName="btn btn-danger"
					title="Reject document">
					<i class="icon-ban-circle"></i>
					Reject
				</d:ActionLink>

				<d:ActionLink ui:field="aSimulate" styleName="btn btn-default hidden">
					<i class="icon-play"></i>
					Simulate
				</d:ActionLink>
				
				<d:ActionLink ui:field="aAttach" styleName="btn btn-default" 
				    title="Attach word, pdf, scanned documents etc">
					<i class="icon-upload-alt"></i>
					Attach
				</d:ActionLink>

				<div class="btn-group">
					<button type="button" class="btn btn-default dropdown-toggle"
						data-toggle="dropdown">
						<i class="icon-cog"></i>
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<li>
							<d:ActionLink ui:field="aEdit">
								<i class="icon-edit"></i>
								Edit
							</d:ActionLink>
						</li>
						<li>
							<d:ActionLink ui:field="aDelete">
								<i class="icon-trash"></i>
								Delete
							</d:ActionLink>
						</li>
					</ul>
				</div>
			</div>
		</div>


		<div class="personal_info row-fluid span12">
			<div class="span3">
				<i class="icon-user icon-large"></i>
				<span ui:field="eOwner"></span>
				<br />
			</div>

			<div class="span3">
				<i class="icon-calendar icon-large"></i>
				<span ui:field="spnCreated"></span>
			</div>

			<div class="span3">
				<span>Priority:</span>
				<span ui:field="spnPriority" class="label"></span>
			</div>

			<div class="span4">
				<span>Current Status:</span>
				<span class="label label-info">
					<i class="icon-edit"></i>
					<span ui:field="spnStatus"></span>
				</span>
			</div>
		</div>

		<div class="row-fluid content-area">
			<div>
				<strong>Document Date:</strong>
				<span ui:field="spnDate" class="subject"></span>
			</div>
			<div>
				<strong>Value:</strong>
				<span ui:field="spnValue" class="subject"></span>
			</div>
			<div>
				<strong>Business Partner:</strong>
				<span ui:field="spnPartner" class="subject"></span>
			</div>
			<div>
				<strong>Description:</strong>
				<span ui:field="spnDescription"></span>
			</div>

			<g:HTMLPanel ui:field="panelAttachments" styleName="attachment-panel">
				<!--styleName="attachment-section row-fluid span6" -->

			</g:HTMLPanel>

			<div class="uploader hidden">
				<up:Uploader ui:field="uploader"></up:Uploader>
			</div>
		</div>

		<g:HTMLPanel styleName="status-section span3 pull-right row-fluid panel panel-default">
			<div class="panel-heading row-fluid">
				<div class="span2"><i class="icon-briefcase"></i></div>
			    <div class="span10"><h3 class="panel-title">Business Process</h3></div>
			  </div>
			 <g:HTMLPanel ui:field="statusContainer" styleName="panel-body"></g:HTMLPanel>
			  <g:HTMLPanel styleName="panel-footer">
				  <d:ActionLink ui:field="aShowProcess"  title="View full process" styleName="hand">
					<strong>View Complete Process</strong>
			     </d:ActionLink>
			  </g:HTMLPanel>
		</g:HTMLPanel>


		<g:HTMLPanel styleName="row-fluid recent-activity span8">
			<span class="title">
				<i class="icon-comments"></i>
				Comments and Activity
			</span>

			<div class="row-fluid comment-box">
				<i class="icon-chevron-up"></i>
				<g:FocusPanel ui:field="commentPanel">
				<g:HTMLPanel styleName="comment-container comment-small" ui:field="commentContainer">
					<g:TextArea ui:field="commentBox" styleName="textarea-box textarea-small"></g:TextArea>
					<d:ActionLink ui:field="aSaveComment" styleName="hand btn btn-primary pull-right button-post hidden">POST</d:ActionLink>
				</g:HTMLPanel>
				</g:FocusPanel>
			</div>

			<g:HTMLPanel ui:field="panelActivity" styleName="panel-activity">
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
