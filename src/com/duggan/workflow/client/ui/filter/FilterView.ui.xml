<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:dt='urn:import:com.google.gwt.user.datepicker.client'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="dialog is-visible" ui:field="filterDialog">
			<g:HTMLPanel>
                      <div class="pointer">
                          <div class="arrow"></div>
                          <div class="arrow_border"></div>
                      </div>
                      <div class="body">
                          <p class="title">
                              Filter Option:
                          </p>
                          <div class="form">
                             <div class="row-fluid">
	                             <select>
	                                  <option>Invoice</option>
	                                  <option>LPO</option>
	                                  <option>Contract</option>
                             	 </select>	
	                           </div>
	                          <div class="row-fluid">
	                              <span>Subject:</span>
	                              <input type="text"/>
	                           </div>
	                           <div class="row-fluid">
	                              <span>Has the words:</span>
	                              <input type="text"/>
                               </div>
                              <div class="row-fluid">
                              	<div class="span3">
	                              	<span>Start Date:</span>
	                              	<div class="input-group">
										  <dt:DateBox title="Start Date" styleName="form-control"></dt:DateBox>
										  <span class="input-group-addon"><i class="icon-calendar"/></span>
									</div>
								</div>
								
								<div class="span3">
									<span>End Date:</span>
	                              	<div class="input-group">
										  <dt:DateBox title="Start Date" styleName="form-control"></dt:DateBox>
										  <span class="input-group-addon"><i class="icon-calendar"/></span>
									</div>
								</div>
                              </div>
                          </div>
						<g:Button styleName="btn btn-primary pull-left" ui:field="btnDone"><i class="icon-search icon-large"></i></g:Button>
                      </div>
					
           </g:HTMLPanel>
           
	</g:HTMLPanel>
</ui:UiBinder>
