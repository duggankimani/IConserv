<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:up='urn:import:com.duggan.workflow.client.ui.upload.custom'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="content-body overflow-y settings">
		<div class="row-fluid">
			<div class="span6 form-horizontal">
				<div class="control-group">
					<label for="Names" class="control-label">
						<b>Company Name:</b>
					</label>
					<div class="controls">
						<d:TextField ui:field="txtCompanyName" type="text"
							class="input-large" placeholder="Company Name" />
					</div>
				</div>

				<div class="control-group">
					<label for="Names" class="control-label">
						<b>SMTP Settings:</b>
					</label>
					<div class="controls">
						<d:TextField ui:field="txtSmtp" type="text" class="input-large"
							placeholder="SMTP" />
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">
						<b>Company Logo:</b>
					</label>
					<div class="controls">
						<g:HTMLPanel ui:field="uploadPanel">
							<up:Uploader ui:field="uploader"></up:Uploader>
						</g:HTMLPanel>
					</div>
				</div>
			</div>
		</div>

		<div class="row-fluid">
			<div class="form-actions span6">
				<g:Anchor ui:field="aSaveGroup" styleName="btn btn-success">
					Save&nbsp;
					<i class="icon-double-angle-right"></i>
				</g:Anchor>
			</div>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder>
