<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:PopupPanel glassEnabled="true" styleName="modal modal-admin" modal="true" ui:field="AddUserDialog">
		<g:HTMLPanel styleName="full-page">
	 		<g:HTMLPanel styleName="modal-header">
					<h5><i class="icon-cogs"></i>New User<g:Anchor ui:field="aClose"><i class="icon-remove pull-right"/></g:Anchor></h5>
			 </g:HTMLPanel>
			 <d:IssuesPanel ui:field="issues">
	    	</d:IssuesPanel>
			 
		 	<g:HTMLPanel styleName="modal-body">
		 			<g:HTMLPanel styleName="hide" ui:field="divUserDetails">
						  <div class="form-group">
						    <label for="ProcessName">Username:</label>
						    <d:TextField ui:field="txtUserName" type="email" 
						        class="form-control" placeholder="First Name"/>
						  </div>
						  <div class="form-group">
						    <label for="ProcessName">First Name:</label>
						    <d:TextField ui:field="txtFirstname" type="email" 
						        class="form-control" placeholder="First Name"/>
						  </div>
						  
						  <div class="form-group">
						    <label for="ProcessName">Last Name:</label>
						    <d:TextField ui:field="txtLastname" type="email" 
						        class="form-control" placeholder="Last Name"/>
						  </div>
						  
						  <div class="form-group">
						    <label for="ProcessName">Email:</label>
						    <d:TextField ui:field="txtEmail" type="email" 
						        class="form-control" placeholder="Email"/>
						  </div>
						  
						  <div class="form-group">
						    <label for="ProcessName">Password:</label>
						    <d:PasswordField ui:field="txtPassword" type="password" 
						         class="form-control" placeholder="Password"/>
						  </div>
						  
						  <div class="form-group">
						    <label for="ProcessName">Confirm Password:</label>
						    <d:PasswordField ui:field="txtConfirmPassword" type="password" 
						        class="form-control" placeholder="Email"/>
						  </div>
					
						<div class="control-group">
							<label class="control-label">Group:</label>
							<g:FocusPanel ui:field="sltContainer">
								<g:HTMLPanel>
								<div class="controls">
									<div class="select2-container select2-container-multi" ui:field="sltBox">
										<d:BulletListPanel ui:field="ulPanel" styleName="select2-choices">
										    
										</d:BulletListPanel>
										</div>
										<input type="hidden" class="input-block-level" name="reseiver"	value="" style="display: none;"/>
									</div>
								</g:HTMLPanel>
							</g:FocusPanel>
								<div class="select2-drop select2-drop-multi hidden" ui:field="sltDrop" style="width:200px; display:block; top:266px;">
										<ul class="select2-results" ui:field="ulSelectResults">
											<g:Anchor styleName="select2-results-dept-0 select2-result select2-result-selectable select2-highlighted" ui:field="liSelectItem">
												<div class="select2-result-label"><span class="select2"></span>Procurement</div>
											</g:Anchor>
											
											<li class="select2-results-dept-0 select2-result select2-result-selectable">
												<div class="select2-result-label"><span class="select2-match"></span>Management</div>
											</li>
											
											<li class="select2-results-dept-0 select2-result select2-result-selectable">
												<div class="select2-result-label"><span class="select2-match"></span>Sales &amp; Marketing</div>
											</li>
										</ul>
								</div>
							</div>
							
							<div class="modal-footer">
								<g:Anchor ui:field="aSaveUser" styleName="btn btn-success">
							  Save&nbsp; 
						      <i class="icon-double-angle-right"></i>						      
						  	</g:Anchor>
							</div>
							
					</g:HTMLPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel styleName="hide" ui:field="divGroupDetails">
					<g:HTMLPanel styleName="modal-body">
						  <div class="form-group">
						    <label for="ProcessName">Group Name:</label>
						    <d:TextField ui:field="txtGroupname" type="email" 
						        class="form-control" placeholder="Group Name"/>
						  </div>
						  
						  <div class="form-group">
						 	 <label for="ProcessDescription">Description:</label>
						 	 <d:TextArea ui:field="txtDescription" class="form-control" rows="3"></d:TextArea>
						  </div>
						  
						  <div class="form-group">
						    <label for="ProcessName">Users:</label>
						    <d:TextField ui:field="txtUsers" type="users" 
						        class="form-control" placeholder="Email"/>
						  </div>
						  
						  <g:Anchor styleName="btn btn-success pull-right" ui:field="aSaveGroup">Save&nbsp; <i class="icon-double-angle-right"></i></g:Anchor>
					</g:HTMLPanel>
			 </g:HTMLPanel>
		</g:HTMLPanel>
	</g:PopupPanel>
</ui:UiBinder>
