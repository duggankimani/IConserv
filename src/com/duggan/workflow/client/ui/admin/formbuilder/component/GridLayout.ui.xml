<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	
	<g:HorizontalPanel styleName="control-group">
	    <g:cell>
	        <g:HorizontalPanel styleName="hidden">
	            <g:cell>
					<g:Label ui:field="lblEl" text="Grid Layout"></g:Label>
				</g:cell>
				<g:cell>
				    <g:Anchor ui:field="btnAdd" text="Add"></g:Anchor>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		
	    <g:cell>
		<g:HTMLPanel ui:field="divControls">
		     <g:HTMLPanel styleName="table table-hover table-striped table-bordered">
			    <div class="thead">
			    	<div class="tr">
						<div class="th">Column 1</div>
						<div class="th">Column 2</div>											
						<div class="th">Column 3</div>
					</div>						
				</div>
				<g:HTMLPanel ui:field="panelUsers" styleName="tbody">
				    	<g:HTMLPanel styleName="tr">
				    		<g:HTMLPanel styleName="td">Row 1</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    	</g:HTMLPanel>
				    	
				    	<g:HTMLPanel styleName="tr">
				    		<g:HTMLPanel styleName="td">Row 2</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    	</g:HTMLPanel>
				    	
				    	<g:HTMLPanel styleName="tr">
				    		<g:HTMLPanel styleName="td">Row 3</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    	</g:HTMLPanel>
				</g:HTMLPanel><!--End Tbody  -->
			</g:HTMLPanel><!--End Table  -->
	   </g:HTMLPanel>
	   </g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 