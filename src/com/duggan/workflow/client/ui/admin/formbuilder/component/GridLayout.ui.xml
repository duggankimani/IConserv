<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	<g:HTMLPanel styleName="control-group">
		<label ui:field="lblEl" class="control-label">Grid Layout</label>
		
		<div class="controls" ui:field="divControls">
		     <div class="table table-hover table-striped table-bordered">
			    <div class="thead">
			    	<div class="tr">
						<div class="th">Column 1</div>
						<div class="th">Column 2</div>											
						<div class="th">Column 3</div>
					</div>						
				</div>
				<g:HTMLPanel ui:field="panelUsers" styleName="tbody">
				    	<g:HTMLPanel styleName="tr">
				    		<g:HTMLPanel styleName="td">Row 1</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    	</g:HTMLPanel>
				    	
				    	<g:HTMLPanel styleName="tr">
				    		<g:HTMLPanel styleName="td">Row 2</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    	</g:HTMLPanel>
				    	
				    	<g:HTMLPanel styleName="tr">
				    		<g:HTMLPanel styleName="td">Row 3</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    		<g:HTMLPanel styleName="td">Data</g:HTMLPanel>
				    	</g:HTMLPanel>
				</g:HTMLPanel><!--End Tbody  -->
			</div><!--End Table  -->
	   </div>
	</g:HTMLPanel>
</ui:UiBinder> 