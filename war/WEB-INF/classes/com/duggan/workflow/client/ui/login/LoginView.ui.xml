<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:v='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

    <g:HTMLPanel styleName="login-bg">
	<g:HTMLPanel styleName="row-fluid login-wrapper">
        <a href="#">
        <a class="brand" href="#">E-Business Task List | Your Organisation</a> 
        </a>
        <div class="span4 box">
            <div class="content-wrap">
                <h6>Log in</h6>
                <input id="userid" class="span12" type="text" placeholder="Username"></input>
                <input id="userpass" class="span12" type="password" placeholder="Your password"></input>
                <a href="#" class="forgot">Forgot password?</a>
                <div class="remember">
                    <input id="remember-me" type="checkbox"></input>
                    <label for="remember-me">Remember me</label>
                </div>
                <g:Anchor ui:field="aLogin" styleName="btn-glow primary login">Log in</g:Anchor>
                <v:IssuesPanel ui:field="issues">
	    		</v:IssuesPanel>
            </div>
        </div>
	</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
